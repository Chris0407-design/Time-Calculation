function timeDifferenceInMinutes(startTime, endTime) {
    const start = new Date(`1970-01-01T${startTime}Z`);
    let end = new Date(`1970-01-01T${endTime}Z`);

    if (end < start) {
        end.setDate(end.getDate() + 1);
    }

    const differenceInMillis = end - start;
    const differenceInMinutes = Math.floor(differenceInMillis / (1000 * 60));

    return differenceInMinutes;
}

function calculateTimeDifference() {
    const startTime = document.getElementById('start-time').value;
    const endTime = document.getElementById('end-time').value;

    if (startTime && endTime) {
        const difference = timeDifferenceInMinutes(startTime, endTime);
        document.getElementById('result').innerText = `The difference is ${difference} minutes.`;
    } else {
        document.getElementById('result').innerText = 'Please enter both start and end times.';
    }
}
const express = require('express');
const app = express();
const port = 3000;

app.use(express.json());

function timeDifferenceInMinutes(startTime, endTime) {
    const start = new Date(`1970-01-01T${startTime}Z`);
    let end = new Date(`1970-01-01T${endTime}Z`);

    if (end < start) {
        end.setDate(end.getDate() + 1);
    }

    const differenceInMillis = end - start;
    const differenceInMinutes = Math.floor(differenceInMillis / (1000 * 60));

    return differenceInMinutes;
}

app.post('/calculate-time-difference', (req, res) => {
    const { startTime, endTime } = req.body;
    if (startTime && endTime) {
        const difference = timeDifferenceInMinutes(startTime, endTime);
        res.json({ difference });
    } else {
        res.status(400).json({ error: 'Please provide both start and end times.' });
    }
});

app.listen(port, () => {
    console.log(`Server running at http://localhost:${port}`);
});
curl -X POST http://localhost:3000/calculate-time-difference -H "Content-Type: application/json" -d '{"startTime": "23:30:00", "endTime": "00:15:00"}'
